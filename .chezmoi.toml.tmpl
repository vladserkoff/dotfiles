{{- $email := promptStringOnce . "email" "E-mail" "9671366+vladserkoff@users.noreply.github.com" -}}
{{- $is_work := promptBoolOnce . "is_work" "Is it a work machine?" false -}}
{{- $aws_profile := promptStringOnce . "aws_profile" "Default AWS profile:" "" -}}

